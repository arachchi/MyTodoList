<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">

        <!-- colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- App bar -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/noto_sans</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Activity">
        <item name="android:background">@color/background_dark_1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <!-- Items -->
    <style name="Cell" />

    <style name="Cell.Checkable" />

    <style name="Cell.Checkable.Title">
        <item name="android:textSize">@dimen/cell_checkable_title_fontSize</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
